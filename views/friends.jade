extends layout

block content
    div#alert_placeholder
    h1 Friends
    
    table.table.table-hover.table-striped
        thead
            tr
                th Username
                th Actions
        tbody
            tr
                th Learning Leo
                th
                    button#leoMessage.btn.btn-primary(type="button" data-toggle="modal" data-target="#messageModal")
                        span.fa.fa-envelope(aria-hidden="true")
                    span &nbsp;
                    button#leoVideo.btn.btn-primary(type="button")
                        span.fa.fa-video-camera
            tr
                th Cultural Carl
                th
                    button#carlMessage.btn.btn-primary(type="button" data-toggle="modal" data-target="#messageModal")
                        span.fa.fa-envelope(aria-hidden="true")
            tr
                th Philosophical Phoebe
                th
                    button#phoebeMessage.btn.btn-primary(type="button" data-toggle="modal" data-target="#messageModal")
                        span.fa.fa-envelope(aria-hidden="true")
                    span &nbsp;
                    button#phoebeVideo.btn.btn-primary(type="button")
                        span.fa.fa-video-camera
            tr
                th
                    button#addFriend.btn.btn-default(type="button")
                        span.fa.fa-plus-circle
                th.text-right

    div.modal.fade#messageModal(tabindex="-1" role="dialog" aria-labelledby="messageLabel")
        div.modal-dialog(role="document")
            div.modal-content
                div.modal-header Message to&nbsp;
                    span#name
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") &times;
                div.modal-body
                    textarea.form-control(rows="10" placeholder="Message Text")
                div.modal-footer
                    button.btn.btn-default(type="button" data-dismiss="modal") Close
                    button.btn.btn-primary(type="button" onclick="sendMessage()" data-dismiss="modal") Send Message
