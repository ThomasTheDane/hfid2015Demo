extends layout

block content
  h1 Let's Talk
  if !user
    form.form-horizontal(method='POST')
      .form-group
        .col-sm-offset-3.col-sm-7
          a.btn.btn-block.btn-google.btn-social(href='/auth/google')
            i.fa.fa-google-plus
            | Sign in with Google
  else
    script(src='/js/script.js')
    h2 Select Countries:
    #container(style='position: relative; height:460px; width: 95%;')
      #top(style='float: left; position: relative; width: 100%; height: 15%;')
        div(style='float: left; width: 85%; position:relative;')
          form.form-search
            .input-append
              #the-basics
                input.typeahead(type='text', placeholder='Search for a Country', onkeydown='search(this)')
      #bottom(style='float: left; position: relative; width: 100%; height: 85%;')
        #map(style='float: left; position: relative; width: 85%; height: 100%;')
        div(style='float: right; width: 15%; height: 100%; position:relative;')
          table.table.table-bordered(style='width: 100%;  position:relative;')
            thead
              tr
                th(colspan='2') Selected Countries
            tbody#selectedCountries
    .row
      .col-md-4
        h2 Select Topic Category:
      .col-md-3
        p.topicGroup Politics
        p.topicGroup Religion
        p.topicGroup Get to Know
        p.topicGroup Philosophy
      .col-md-2
        img.topicSelector
        br
        img.topicSelector
        br
        img.topicSelector
        br
        img.topicSelector
      .col-md-2
        a.btn.btn-block.btn-success#findPartnerButton(href='/prechat')
          | Find
          br
          | Partner
